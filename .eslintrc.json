{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-plusplus": 0,
        "comma-dangle": 0,
        "no-shadow": 1,
        "no-underscore-dangle": 0,
        "no-console": 0,
        "consistent-return": 1,
        "linebreak-style": 0
    }
}
